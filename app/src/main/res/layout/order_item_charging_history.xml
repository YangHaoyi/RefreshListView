<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:orientation="vertical"
        android:background="@color/divider_gray_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:text="1"
                    android:textColor="@color/blur"
                    android:textSize="11dp"
                     />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/icon_list_time"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_list_time"/>
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-05-26 18:47:05"
                    android:textColor="@color/blur"
                    android:textSize="11dp"
                    android:id="@+id/textview_time" />

                <TextView
                    android:layout_width="42dp"
                    android:layout_height="14dp"
                    android:text="已完成"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"
                    android:textSize="9dp"
                    android:background="@drawable/bg_order_status_green"
                    android:id="@+id/textview_status" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东软河口园区"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/text_color_33"
                android:textSize="12dp"
                android:id="@+id/textview_main_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5号停车位"
                android:textSize="12dp"
                android:textColor="@color/text_color_33"
                android:layout_marginTop="6dp"
                android:id="@+id/textview_sub_name" />
        </LinearLayout>
        <View
            android:id="@+id/v1"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/test" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥999.99"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/text_color_33"
                android:id="@+id/textview_price" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_back_arrow"/>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:orientation="vertical"
        android:background="@color/divider_gray_color"></View>
</LinearLayout>