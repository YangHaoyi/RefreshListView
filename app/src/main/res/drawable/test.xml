<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- button color -->
    <item>
        <shape>
            <solid android:color="#ffffff" />

            <stroke
                android:dashGap="2dp"
                android:dashWidth="4dp"
                android:width="1dp"
                android:color="#eeeeee" />

            <padding android:left="1dp" />
        </shape>
    </item>
    <!-- main background -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="#ffffff" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

</layer-list>